torea-bay = #353b7d
heather = #B5C0C6
waikawa-grey = #636791

fixed-top-size = 80px
fixed-bottom-size = 90px

html
	height: 100%
	font-family: 'Roboto', sans-serif
	
body
	height: 100%

.sticky__top
	position:fixed
	top: 0px
	width: 100%
	z-index: 9999

.left-bar
	lost-column: 3/12 0 0
	height: 100%
	background-color: torea-bay
	
.contacts
	margin-top: fixed-top-size
	height: "calc(100% - %s - %s)" % (fixed-top-size fixed-bottom-size)
	overflow-y: hidden
	position: relative
	&__top
		height: fixed-top-size
		box-shadow: #000 -8px 0px 12px 0px
		z-index: 10
		lost-column: 3/12 0 0
		background-color: torea-bay
	&__bottom
		height: fixed-bottom-size
		box-shadow: #000 -8px 0px 12px 0px
		z-index: 10
		lost-column: 3/12 0 0
		background-color: torea-bay
		
.contacts-chat-room
	padding: 15px 0	
	height: 60px
	position: relative
	color: waikawa-grey
	&:hover
		background-color: lighten(torea-bay, 3%)
		cursor: pointer
	&--active
		background-color: #292F66
	&__title
		color: white
		position: absolute
		top: 23px
		font-weight: bold
		font-size: 15px
		& span.online
			width: 10px
			height: 10px
			background-color: #6AB04C
			display: inline-block
			border-radius: 1000px
			margin-left: 5px
	&__time
		position: absolute
		top: 23px
		right: 43px
	&__excerpt
		position:absolute
		top: 47px
		text-overflow: ellipsis
		width: 50%
		height: 18px
		overflow: hidden
		white-space: nowrap
		font-size: 14px
	&__profile-pictures
		lost-column: 5/20
		height: 60px
	&__profile-pictures-single
		width: 45px
		height: 45px
		background-color: blue
		border-radius: 40px
		position: absolute
		top: 22px
		left: 30px
		background-image: url('https://avatars2.githubusercontent.com/u/8213031?s=460&v=4')
		background-size: cover
		&--multiple-first
			background-color: pink
			top: 20px
			left: 23px
			z-index: 3
			background-image: url('https://avatars0.githubusercontent.com/u/32596568?s=200&v=4')
		&--multiple-second
			top: 27px
			left: 37px
	&__meta
		lost-column: 15/20
	&__silent
		position: absolute
		top: 44px
		right: 11px
		font-size: 18px

.chat
	width: 80%;
	height: 100%;
	display: inline-block;
	padding-left: 20%;
	&-body
		height: "calc(100% - %s - %s)" % (fixed-top-size fixed-bottom-size)
		overflow-y: scroll
		margin-top: fixed-top-size
		lost-column: 9/12 0 0
		position: relative
	&-top
		height: fixed-top-size;
		box-shadow: #B5C0C6 0px 2px 4px 0px;
		lost-column: 9/12 0 0
		position: relative
		font-weight: bold
		background-color: #fff
		&__title
			position: absolute
			top: 30px
			left: 47px
		&__tools
			color: heather
			position: absolute
			top: 30px
			right: 50px
			svg
				padding-left: 22px
				cursor: pointer
				&:hover
					color: black
				

.contacts-search
	text-align: center
	padding-top: 20px
	&__input
		background-color: rgba(0, 0, 0, 0)
		border: none
		color: heather
		width: calc(80% - 10px)
		padding-right: 10px
		&:focus
			outline: none
			color: heather
		&::placeholder
			color: heather
	&__box
		width: calc(100% - 43px)
		margin: 0 auto
		background-color: waikawa-grey
		padding: 8px 0
	&__search-icon
		color: heather
		padding: 0 19px 0 7px
		margin-right: -5px
		font: 400 13.3333px Arial
	
.chat-container
	padding: 0 50px
	
.chat-single
	margin: 30px 0
	position: relative
	lost-utility: clearfix
	&__name
		font-weight: bold
	&__profile-picture
		width: 50px
		height: 50px
		background-color: blue
		border-radius: 1000px
		background-image: url("https://avatars2.githubusercontent.com/u/8213031?s=460&v=4")
		background-size: cover
		&-container
			lost-column: 2/30
	&__name-message-container
		lost-column: 25/30
		font-size: 15px
	&__time
		position: absolute
		right: 10px
		top: 0px
		color: waikawa-grey
		font-size: 14px
	&__message
		padding-top: 11px

.sticky-bottom
	width: 100%
	height: fixed-bottom-size
	position: fixed
	bottom: 0
	z-index: 2
	background-color: white